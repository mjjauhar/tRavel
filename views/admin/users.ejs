<%- include('../partials/header.ejs') %> <%-
include('../partials/admin_navbar.ejs') %>
<div class="container-fluid">
  <div class="row">
    <nav
      id="sidebarMenu"
      class="col-md-3 col-lg-2 d-md-block myColor sidebar sidenav collapse"
    >
      <div class="position-sticky pt-3 sidebar-sticky">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a
              class="nav-link active text-light"
              aria-current="page"
              href="/admin/dashboard"
            >
              <span data-feather="home" class="align-text-bottom"></span>
              Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" href="#">
              <span data-feather="file" class="align-text-bottom"></span>
              Orders
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" href="/admin/products">
              <span
                data-feather="shopping-cart"
                class="align-text-bottom"
              ></span>
              Products
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" href="/admin/main_categories">
              <span data-feather="file" class="align-text-bottom"></span>
              Main Categories
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" href="/admin/sub_categories">
              <span data-feather="file" class="align-text-bottom"></span>
              Sub Categories
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark admin_rectangle" href="/admin/users">
              <span data-feather="users" class="align-text-bottom"></span>
              Users
            </a>
          </li>
        </ul>
      </div>
    </nav>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
      >
        <h1 class="h2">Users</h1>
      </div>
      <div class="container">
        <table class="table" id="productsTable">
          <thead>
            <tr class="text-dark bg-light shadow sorter-header">
              <th scope="col"></th>
              <th scope="col">Name</th>
              <th scope="col">username</th>
              <th scope="col">Email</th>
              <th scope="col">Phone no</th>
              <th scope="col" style="width: 18%;">created_date</th>
              <th scope="col">Type</th>
              <th scope="col">Status</th>
              <th scope="col">Button</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(function(user){ %>
            <tr class="indexed">
              <th scope="row"></th>
              <td class="fw-bold indexed">
                <%= user?.first_name %> <%= user?.last_name %>
              </td>
              <td><%= user?.username %></td>
              <td><%= user?.email %></td>
              <td><%= user?.phone_no %></td>
              <td>
                <small> <%= moment(user?.created_date).format('llll') %> </small>
              </td>
              <td><%= user?.type %></td>
              <% if(user?.is_blocked === false){ %>
              <td>
                <small class="text-success">ACTIVE</small>
              </td>
              <td>
                <form
                  action="/admin/users/block_user/<%= user._id %>"
                  method="post"
                >
                  <button
                    class="btn-sm btn btn-outline-danger"
                    type="submit"
                  >
                    <small>BLOCK</small>
                  </button>
                </form>
              </td>
              <% } else { %>
              <td><small class="text-danger">BLOCKED</small></td>
              <td>
                <form
                  action="/admin/users/unblock_user/<%= user._id %>"
                  method="post"
                >
                  <button
                    class="btn-sm btn btn-outline-success"
                    type="submit"
                  >
                    <small>UNBLOCK</small>
                  </button>
                </form>
              </td>
              <% } %>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>

<%- include('../partials/footer.ejs') %>
