<%- include('../partials/header.ejs') %>
  <%- include('../partials/admin_navbar.ejs') %>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Users</h1>

      </div>
      <div class="container">
        <table class="table" id="productsTable">
          <thead>
            <tr class="text-light bg-secondary sorter-header">
              <th scope="col"></th>
              <th scope="col">Name</th>
              <th scope="col">username</th>
              <th scope="col">Email</th>
              <th scope="col">Phone no</th>
              <th scope="col">created_date</th>
              <th scope="col">Type</th>
              <th scope="col">Blocked?</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(function(user){ %>
              <tr class="indexed">
                <th scope="row"></th>
                <td class="fw-bold indexed">
                  <%= user.first_name %>
                    <%= user.last_name %>
                </td>
                <td>
                  <%= user.username %>
                </td>
                <td>
                  <%= user.email %>
                </td>
                <td>
                  <%= user.phone_no %>
                </td>
                <td>
                  <small>
                    <%= user.created_date %>
                  </small>
                </td>
                <td>
                  <%= user.type %>
                </td>
                <td>
                  <% if(user.is_blocked === false){ %>
                  <p class="text-success"><%= user.is_blocked %></p>
                  <form action="/admin/users/block_user/<%= user._id %>" method="post">
                    <button class="btn-sm btn-outline-dark" type="submit">block</button>
                  </form>
                  <% } else { %>
                  <p class="text-danger"><%= user.is_blocked %></p>
                    <form action="/admin/users/unblock_user/<%= user._id %>" method="post">
                      <button class="btn-sm btn-outline-dark" type="submit">unblock</button>
                    </form>
                  <% } %>
                </td>

              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </main>
    </div>
    </div>

