<%- include('../partials/header.ejs') %> <%-
include('../partials/admin_navbar.ejs') %>
<div class="container-fluid">
  <div class="row">
    <nav
      id="sidebarMenu"
      class="col-md-3 col-lg-2 d-md-block myColor sidebar sidenav collapse"
    >
      <div class="position-sticky pt-3 sidebar-sticky">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a
              class="nav-link active text-light"
              aria-current="page"
              href="/admin/dashboard"
            >
              <span data-feather="home" class="align-text-bottom"></span>
              Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" href="#">
              <span data-feather="file" class="align-text-bottom"></span>
              Orders
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" href="/admin/products">
              <span
                data-feather="shopping-cart"
                class="align-text-bottom"
              ></span>
              Products
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark admin_rectangle" href="#">
              <span data-feather="file" class="align-text-bottom"></span>
              Main Categories
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" href="/admin/sub_categories">
              <span data-feather="file" class="align-text-bottom"></span>
              Sub Categories
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" href="/admin/users">
              <span data-feather="users" class="align-text-bottom"></span>
              Users
            </a>
          </li>
        </ul>
      </div>
    </nav>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
      >
        <h1 class="h2">Main Categories</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <a href="/admin/main_categories/add_main_category"
            ><button type="button" class="btn btn-sm btn-outline-success">
              Add New Main Category
            </button></a
          >
        </div>
      </div>
      <div class="container">
        <table class="table" id="productsTable">
          <thead>
            <tr class="text-dark bg-light shadow sorter-header">
              <th scope="col"></th>
              <th scope="col">Name</th>
              <th scope="col" style="width: 40%;">Description</th>
              <th scope="col">created_date</th>
              <th scope="col">Status</th>
              <th scope="col" class="text-end pe-5">Button</th>
            </tr>
          </thead>
          <tbody>
            <% main_categories.forEach(function(main_category){ %>
            <tr class="indexed">
              <th scope="row"></th>
              <td class="fw-bold indexed"><%= main_category?.name %></td>
              <td><small><%= main_category?.description %></small></td>
              <td>
                <small> <%= moment(main_category?.created_date).format('llll') %> </small>
              </td>
              <% if(main_category.delete === false){ %>
              <td><p class="text-success">Active</p></td>
              <td>
                <a
                  href="/admin/main_categories/edit_main_category/<%= main_category._id %>"
                  class="btn-sm btn-outline-primary btn"
                  >Edit</a
                >
                <a
                  href="/admin/main_categories/delete_main_category/<%= main_category._id %>"
                  class="btn-sm btn-outline-danger btn"
                  onclick="return confirm('Are you sure to delete <%= main_category.name %>')"
                  >Delete</a
                >
              </td>
              <% } else { %>
              <td><p class="text-danger">Deleted</p></td>
              <td>
                <a
                  href="/admin/main_categories/edit_main_category/<%= main_category._id %>"
                  class="btn-sm btn-outline-primary btn"
                  >Edit</a
                >
                <a
                  href="/admin/main_categories/restore_main_category/<%= main_category._id %>"
                  class="btn-sm btn-outline-danger btn"
                  onclick="return confirm('Are you sure to restore <%= main_category.name %>')"
                  >Restore</a
                >
              </td>
              <% } %>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>

<%- include('../partials/footer.ejs') %>
