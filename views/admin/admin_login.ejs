<%- include('../partials/header.ejs') %>
  <div class="container-fluid">
    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <a class="navbar-brand ms-auto text-end" href="/"><i class="bi bi-x-lg"></i></a>
      </div>
    </nav>
  </div>
  <div class="container-fluid">
    <div class="row mt-5">
      <div class="col-12 col-md-6">
        <img class="w-100" src="/public/images/Admin-image.png" alt="img">
      </div>
      <div class="col-12 col-md-6 text-center">
        <main class="form-signin">
          <form action="/admin/admin_login" method="post">
            <img class="mb-4 navbar-brand-login" src="/public/images/logo-no-background.svg" alt="tRavel-logo">
            <h1 class="h4 mb-3 fw-normal">Please Log in</h1>

            <div class="form-floating mx-5 my-3">
              <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
              <label for="floatingInput" class="form-label">Email address</label>
              <% if(emailErr){ %>
                <p class="text-danger">Email is incorrect</p>
                <% } %>
            </div>
            <div class="form-floating mx-5">
              <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password">
              <label for="floatingPassword" class="form-label">Password</label>
              <% if(passwordErr){ %>
                <p class="text-danger">Password is incorrect</p>
                <% } %>
            </div>
            <!-- <div class="checkbox mb-3">
              <label>text-center
                <input type="checkbox" value="remember-me"> Remember me
              </label>
            </div> -->
            <button class="btn btn-lg btn-primary my-3" type="submit">Log in</button><br>
          </form>
        </main>
      </div>
    </div>
  </div>

  <%- include('../partials/footer.ejs') %>