<%- include('../partials/header.ejs') %>

    <main class="col-md-9 ms-sm-auto col-lg-12 px-md-4">
        <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Add new product</h1>
            <a href="/admin/products"><button type="button" class="btn btn-sm btn-outline-danger">Cancel</button></a>
        </div>
        <div class="container">
            <form action="/admin/products/add_products" method="post" enctype="multipart/form-data">
                <label for="">Name</label>
                <input type="text" name="name" class="form-control mb-4" required>

                <label for="">Description</label>
                <input type="text" name="description" class="form-control mb-4">

                <label for="">Category</label>
                <input type="text" name="product_category" class="form-control mb-4">

                <label for="">Price</label>
                <input type="number" name="price" class="form-control mb-4" required>

                <label for="">Stock</label>
                <input type="number" name="product_inventory" class="form-control mb-4">

                <label for="">Image</label>
                <input type="file" name="imgUrl" class="form-control mb-4">

                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    </main>

    <%- include('../partials/footer.ejs') %>