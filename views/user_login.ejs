<%- include('partials/header.ejs') %>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-6">
        <img class="w-100" src="/public/images/Admin-image.png" alt="img">
      </div>
      <div class="col-12 col-md-6 text-center">
        <main class="form-signin">
          <form action="/user_login" method="post">
            <img class="mb-4 navbar-brand" src="../public/images/tRavel-logo.png" alt="tRavel-logo">
            <h1 class="h4 mb-3 fw-normal">Please sign in</h1>

            <div class="form-floating mx-5 my-3">
              <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
              <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating mx-5">
              <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password">
              <label for="floatingPassword">Password</label>
            </div>
            <!-- <div class="checkbox mb-3">
              <label>text-center
                <input type="checkbox" value="remember-me"> Remember me
              </label>
            </div> -->
            <button class="btn btn-lg btn-primary my-3" type="submit">Sign in</button><br>
            <a href="/user_signup"><button class="btn btn-lg btn-primary" type="button">Create account</button></a>
          </form>
        </main>
      </div>
    </div>
  </div>

  <%- include('partials/footer.ejs') %>