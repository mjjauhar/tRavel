<%- include('../partials/header.ejs') %>

<div class="container-fluid">
  <nav class="navbar navbar-expand-lg bg-light">
    <div class="container-fluid">
      <a class="navbar-brand ms-auto text-end" href="/"
        ><i class="bi bi-x-lg"></i
      ></a>
    </div>
  </nav>
</div>
<div class="container-fluid">
  <div class="row mt-5">
    <div class="col-12 col-md-6">
      <img class="w-100" src="/public/images/login_img.gif" alt="img" />
    </div>
    <div class="col-12 col-md-6 text-center">
      <main class="form-signin">
        <form action="/otp_login/<%= user._id %>" method="post">
          <img
            class="mb-4 navbar-brand-login"
            src="/public/images/logo-no-background.svg"
            alt="tRavel-logo"
          />
          <h1 class="h4 mb-3 fw-normal">Please enter the otp to log in</h1>
          <div class="form-floating mx-5">
            <input
              type="text"
              class="form-control"
              id="otp"
              placeholder="enter otp"
              name="otp"
            />
            <label for="otp" class="form-label">Enter OTP</label>
          </div>
          <p class="text-danger"><%= msg %></p>
          <button class="btn btn-lg btn-primary my-3" type="submit">
            Log in</button
          ><br />
          <a href="/user_login"> Login wih Email and password </a><br><br>
          <a href="/user_signup"> Create account </a>
        </form>
        <br />
        <form method="POST" action="/resend">
          <p class="full">
            <button type="submit" class="btn-sm">resend otp</button>
          </p>
        </form>
      </main>
    </div>
  </div>
</div>

<%- include('../partials/footer.ejs') %>
