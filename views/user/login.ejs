<%- include('../partials/header.ejs') %>
<div class="container-fluid">
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand ms-auto text-end" href="/">
        <button type="button" class="btn-close" aria-label="Close"></button>
      </a>
    </div>
  </nav>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="d-none d-md-block col-md-6 login_img">
      <h2>Get acess to personilsed shopping experience</h2>
    </div>
    <div class="col-12 col-md-6 text-center">
      <main class="form-signin">
        <form action="/user/login" method="post" novalidate>
          <img
            class="mb-4 navbar-brand-login"
            src="/public/images/logo-no-background.svg"
            alt="tRavel-logo"
          />
          <h1 class="h4 mb-3 fw-normal">Please log in</h1>

          <div class="form-floating mx-5 my-3">
            <input
              type="email"
              class="form-control"
              id="floatingInput"
              placeholder="name@example.com"
              name="email"
              required
            />
            <label for="floatingInput" class="form-label">Email address</label>
            <div class="invalid-feedback">Email is required</div>
            <% if(emailErr){ %>
            <span
              class="position-absolute top-0 end-0 translate-middle badge rounded-pill bg-danger"
              >Invalid email</span
            >
            <% } %>
          </div>

          <div class="form-floating mx-5">
            <input
              type="password"
              class="form-control"
              id="Password"
              placeholder="Password"
              name="password"
              minlength="3"
              required
            />
            <label for="floatingPassword" class="form-label">Password</label>
            <% if(passwordErr){ %>
            <span
              class="position-absolute top-0 end-0 translate-middle badge rounded-pill bg-danger"
              >Wrong Password</span
            >
            <% } %>
          </div>

          <!-- An element to toggle between password visibility -->
          <br /><input type="checkbox" onclick="myFunction()" /> Show Password
          <br />

          <button class="btn btn-lg btn-primary my-3" type="submit">
            Log in</button
          ><br />
          <a href="/user/signup" class="btn btn-lg btn-primary" type="button">
            Create account
          </a>
        </form>
      </main>
    </div>
  </div>
</div>

<script>
  function myFunction() {
    var x = document.getElementById("Password");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
</script>
