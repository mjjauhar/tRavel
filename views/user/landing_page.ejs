<%- include('../partials/header.ejs') %> <%- include('../partials/navbar.ejs')
%>
<section
  class="container-fluid"
  style="
    height: 600px;
    background-image: url('/public/images/banners/New_user_offer_banner.jpg');
    background-position-x: center;
    background-position-y: center;
    background-size: 100%;
    background-repeat: no-repeat;
    margin-top: 10px;
  "
>
  <div class="p-5 text-end">
    <h1 class="ps-3 pe-3 pt-5" style="color: #0E5255;">Limited Offer!</h1>
    <h1 class="ps-3 pe-3 pb-3" style="color: #0E5255;">Purchase Now</h1>
    <h1 class="ps-3 pe-3 pt-5 fw-bold" style="color: #795243;">20% OFF</h1>
    <h3 class="ps-3 pe-3" style="color: #0E5255;">for first purchase</h3>
  </div>
</section>
<section class="container-fluid">
  <div class="row row-cols-2 row-cols-md-5 g-4 pt-3">
    <% products.forEach(function(product){ %>
    <div class="col">
      <div class="card h-100">
        <img
          src="<%= product.imgUrl %>"
          class="card-img-top"
          alt="product image"
          style="width: 15rem; height: 15rem"
        />
        <div class="card-body">
          <h5 class="card-title fw-bold text-truncate"><%= product.name %></h5>
          <p class="card-text text-truncate"><%= product.description %></p>
          <p class="card-text text-dark fw-bold ps-2 half_trapezoid">
            <%= product.price %>
          </p>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</section>

<%- include('../partials/footer_infos.ejs') %> <%-
include('../partials/footer.ejs') %>
