<%- include('../partials/header.ejs') %>

<main class="col-md-9 ms-sm-auto my-5 col-lg-12 px-md-4">
  <div class="container">
    <h3>Add new Address</h3>
    <form action="/user/add/address" method="post">
      <label for="">Type</label>
      <select
        name="type"
        class="form-select form-select mb-4"
        aria-label=".form-select-sm example"
        required
      >
        <option value="office">office</option>
        <option selected value="home">home</option>
      </select>
      <label for="">Name</label>
      <input
        type="text"
        name="name"
        class="form-control mb-4"
        required
        pattern="^(?=.{3,20}$)(?![_.])(?!.*[_.]{2})[a-zA-Z._]+(?<![_.])$"
      />

      <label for="">Phone no</label>

      <input
        type="tel"
        name="phone_no"
        class="form-control mb-4"
        required
        pattern="^(?!0+$)(\+\d{1,3}[- ]?)?(?!0+$)\d{10}$"
      />

      <label for="">Country</label>

      <input
        type="text"
        name="country"
        class="form-control mb-4"
        required
        pattern="^(?=.{2,20}$)(?![_.])(?!.*[_.]{2})[a-zA-Z._]+(?<![_.])$"
      />

      <label for="">City</label>

      <input
        type="text"
        name="city"
        class="form-control mb-4"
        required
      />

      <label for="">Pincode</label>
      <input
        type="tel"
        name="pincode"
        class="form-control mb-4"
        required
        pattern="^[1-9]{1}[0-9]{2}\\s{0, 1}[0-9]{3}$"
      />

      <a href="javascript:history.back()" class="btn btn-outline-danger"
        >Go Back</a
      >
      <!-- Button trigger modal -->
      <button
        type="button"
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#exampleModal"
      >
        Submit
      </button>

      <!-- Modal -->
      <div
        class="modal fade"
        id="exampleModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-body">Confirm creating new address</div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Close
              </button>
              <button type="submit" class="btn btn-success">Create</button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</main>

<%- include('../partials/footer.ejs') %>
